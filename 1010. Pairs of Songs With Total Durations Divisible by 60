class Solution {
public:
    int numPairsDivisibleBy60(vector<int>& time) {
        map<int,int>cnt;
        int ans=0;
        vector<int>v;
        for(int i=0;i<time.size();i++){
            time[i]%=60;
            if(time[i]==0){
                v.push_back(0);
            }
        }
        for(auto u:time){
            cnt[u]++;
        }
        for(auto u:time){
            if(cnt[60-u]>0){
                ans+=cnt[60-u];
                if(u==60-u){
                    ans--;
                }
                cnt[u]--;
            }
        }
        for(int i=1;i<=v.size();i++){
            ans+=v.size()-i;
        }
        return ans;
    }
};
